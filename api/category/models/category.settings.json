{
  "connection": "default",
  "collectionName": "categories",
  "info": {
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true
    },
    "site": {
      "model": "site",
      "via": "categories"
    },
    "link": {
      "type": "string"
    },
    "pagination": {
      "type": "string"
    },
    "articles": {
      "collection": "article",
      "via": "category"
    },
    "color": {
      "type": "string"
    },
    "category_parent": {
      "model": "category",
      "via": "category_child"
    },
    "category_child": {
      "collection": "category",
      "via": "category_parent"
    }
  }
}
