{
  "connection": "default",
  "collectionName": "categories",
  "info": {
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true
    },
    "site": {
      "model": "site",
      "via": "categories"
    },
    "link": {
      "type": "string"
    },
    "pagination": {
      "type": "string"
    },
    "articles": {
      "collection": "article",
      "via": "category"
    },
    "color": {
      "type": "string"
    },
    "category": {
      "model": "category",
      "via": "categories"
    },
    "categories": {
      "collection": "category",
      "via": "category"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "root",
        "subroot",
        "child"
      ]
    }
  }
}
